{% for block in section.blocks %}
   <div>        
      <h2>{{ block.settings.text }}</h2>
      <h2>{{ block.settings.title }}</h2>
      <div>
        {{ block.settings.collection | image_url}}
      </div> 
   </div>
{% endfor %}

{% schema %}
{
  "name": "Text Area",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Text Area"
    }
  ],
  "blocks": [
     {
       "name": "İmage",
       "type": "image_picker",
       "settings": [
         {
           "type": "image_picker",
           "id": "image",
           "label": "İmage"
         }
       ]
     },
     {
      "type": "text",
      "name": "Text",
      "settings": [
        {
          "type": "text",
           "id": "text",
           "label": "Text Giriniz..."
        }
      ]
    },
    {
      "type": "featured_collection",
      "name": "t:sections.collection-list.blocks.featured_collection.name",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "t:sections.collection-list.blocks.featured_collection.settings.collection.label"
        }
      ]
    }
   ],
  "presets": [
    {
      "name": "Text Area"
    }
  ]
}
{% endschema %}

